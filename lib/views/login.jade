html
  head
    title=title
    link(
      href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
      rel='stylesheet'
    )
  body
    div.container

      div.page-header
        h1 Mon profil


      form.login-form.form-horizontal(method='post', role='form')
        input(name='_csrf', type='hidden', value=csrfToken)

        div.form-group
          label.col-sm-4 Login
          div.col-sm-8
            input.form-control(
              placeholder='Votre Login',
              required=true,
              name='givenLogin',
              type='text',
              value=givenLogin)
        div.form-group
          label.col-sm-4 Mot de Passe
          div.col-sm-8
            input.form-control(placeholder='Votre MDP',
              required=true,
              name='Mdp',
              type='password',
              value=Mdp)

        div.form-group
          div.col-sm-offset-4.col-sm-8
            button.login.btn.btn-primary(type='submit') Login
